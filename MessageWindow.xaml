<Window x:Class="Caro_game.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caro_game"
        mc:Ignorable="d"
        Title="MessageWindow" Height="150" Width="250" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <WrapPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,10">
            <TextBlock x:Name="messageText" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Center" FontSize="17" FontWeight="SemiBold"/>
            <Button Width="50" Style="{StaticResource PlayButton}" Click="Button_Click" Margin="0,10,0,0">Ok</Button>
        </WrapPanel>
    </Grid>
</Window>
