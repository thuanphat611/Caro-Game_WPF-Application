<Window x:Class="Caro_game.SizeInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Caro_game"
        mc:Ignorable="d"
        Title="SizeInputDialog" Height="250" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label FontSize="15"  FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">
                    INPUT BOARD SIZE N
            </Label>
            <Label FontSize="15"  FontWeight="SemiBold" HorizontalAlignment="Center" VerticalAlignment="Center">
                (BOARD N x N):
            </Label>
            <Border BorderBrush="Black" BorderThickness="1" CornerRadius="5" Padding="10"  Margin="0,10,0,10">
                <TextBox x:Name="SizeInputBox" Width="Auto" MaxWidth="100" FontSize="15" FontWeight="Medium" BorderThickness="0" TextAlignment="Center"/>
            </Border>
            <Button x:Name="OkayBtn" Style="{StaticResource PlayButton}" Width="100" Click="OkayBtn_Click">Play</Button>
        </StackPanel>
    </Grid>
</Window>
